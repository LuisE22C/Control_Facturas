{
  "openapi": "3.0.1",
  "info": {
    "title": "ControlFacturasAPI",
    "version": "1.0"
  },
  "paths": {
    "/api/Factura": {
      "post": {
        "tags": [
          "Factura"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Factura"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Factura"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Factura"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Factura/{numero}": {
      "get": {
        "tags": [
          "Factura"
        ],
        "parameters": [
          {
            "name": "numero",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Factura/reporte": {
      "get": {
        "tags": [
          "Factura"
        ],
        "parameters": [
          {
            "name": "inicio",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "fin",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DetalleFactura": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "producto": {
            "type": "string",
            "nullable": true
          },
          "cantidad": {
            "type": "integer",
            "format": "int32"
          },
          "precioUnitario": {
            "type": "number",
            "format": "double"
          },
          "facturaId": {
            "type": "integer",
            "format": "int32"
          },
          "factura": {
            "$ref": "#/components/schemas/Factura"
          },
          "subtotal": {
            "type": "number",
            "format": "double",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "Factura": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "numeroFactura": {
            "type": "string",
            "nullable": true
          },
          "cliente": {
            "type": "string",
            "nullable": true
          },
          "fecha": {
            "type": "string",
            "format": "date-time"
          },
          "total": {
            "type": "number",
            "format": "double"
          },
          "detalles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DetalleFactura"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}